{
    "files": [
        "src/index.ts",
        "src/test.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowUnreachableCode": false,
        "declaration": true
    }
}